# . ~/.bash_m
#
# @author - manj@cs.stanford.edu
#

# Set PATH
PATH=$HOME/workspace/bin:$HOME/workspace/merlin-setup/scripts/:/usr/local/bin:$PATH
export PATH

# Sublime setup
# ln -s /Applications/Sublime\ Text\ 2.app/Contents/SharedSupport/bin/subl /usr/local/bin/subl

# Current tree (workspace)
export MTREE=~/workspace

# Local functions

function mtree {
    echo "Using tree = "$MTREE
};

# Perforce
export P4CONFIG=.p4config
export P4EDITOR=vim
export EDITOR=vim
export P4USER=manj
alias p4o='p5 opened ...'
alias p4d='p5 diff ...'

# Git

# Maven
export MAVEN_OPTS=-Xmx1024m

# Java
export JAVA_HOME=`/usr/libexec/java_home`

# Cscope + vim
if [ -f ~/.mscope/.mscoperc ]; then
    . ~/.mscope/.mscoperc
fi

# Ctags + vim
if [ -f ~/.mtags/.mtagsrc ]; then
    . ~/.mtags/.mtagsrc
fi

# Custom Aliases
alias cdt='cd ${MTREE}'
alias cds='cd ${MTREE}/solr-4.7.1/example/solr'
alias cdn='cd ${HOME}/"Google Drive"/notes'

# Lib
export LD_LIBRARY_PATH=/usr/local/lib

# Python
export PYTHONSTARTUP=$HOME/.pythonrc
