# . ~/.bash_m
#
# @author - manj@cs.stanford.edu
#

# Bash git prompt
source ~/.bash-git-prompt/gitprompt.sh
GIT_PROMPT_ONLY_IN_REPO=1
GIT_PROMPT_THEME=Default

# Set PATH
PATH=$HOME/workspace/bin:$HOME/.local/bin:/usr/local/bin:/usr/local/opt/python/libexec/bin:$PATH
export PATH

# Sublime setup
# ln -s /Applications/Sublime\ Text\ 2.app/Contents/SharedSupport/bin/subl /usr/local/bin/subl

# Current tree (workspace)
export MTREE=~/workspace

# Local functions

function mtree {
    echo "Using tree = "$MTREE
};

# Perforce
export P4CONFIG=.p4config
export P4EDITOR=vim
export EDITOR=vim
export P4USER=manj
alias p4o='p5 opened ...'
alias p4d='p5 diff ...'

# Git

# Maven
export MAVEN_OPTS=-Xmx1024m

# Java
export JAVA_HOME=`/usr/libexec/java_home`

# Cscope + vim
if [ -f ~/.mscope/.mscoperc ]; then
    . ~/.mscope/.mscoperc
fi

# Ctags + vim
if [ -f ~/.mtags/.mtagsrc ]; then
    . ~/.mtags/.mtagsrc
fi

# Custom Aliases
alias cdg='cd ${HOME}/"Google Drive"'
alias cdd='cd ${HOME}/Dropbox'
alias cdb='cd ${HOME}/"Box Sync"'
alias cdn='cd ${HOME}/"Google Drive"/notes'
alias cdt='cd ${MTREE}'
alias cds='cd ${MTREE}/merlin/searcher'
alias cda='cd ${MTREE}/merlin-setup/ansible'

# Lib
export LD_LIBRARY_PATH=/usr/local/lib

# Python
export PYTHONSTARTUP=$HOME/.pythonrc
