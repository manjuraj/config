# . ~/.bash_m
#
# @author - manj@cs.stanford.edu
#

# Set PATH
PATH=$HOME/bin:$PATH
export PATH

# Current tree (workspace)
export MTREE=~/workspace
export NOTES=$HOME/Dropbox/notes

# Local functions

function mtree {
    echo "Using tree = "$MTREE
};

# Perforce
export P4CONFIG=.p4config
export P4EDITOR=vim
export EDITOR=vim
export P4USER=manj
alias p4o='p5 opened ...'
alias p4d='p5 diff ...'

# Git

# Maven
export MAVEN_OPTS=-Xmx1024m

# Java
export JAVA_HOME=`/usr/libexec/java_home`

# Cscope + vim
if [ -f ~/.mscope/.mscoperc ]; then
    . ~/.mscope/.mscoperc
fi

# Ctags + vim
if [ -f ~/.mtags/.mtagsrc ]; then
    . ~/.mtags/.mtagsrc
fi

# Custom Aliases
alias cdt='cd ${MTREE}'
alias cdn='cd ${NOTES}'

# Lib
export LD_LIBRARY_PATH=/usr/local/lib

# Python
export PYTHONSTARTUP=$HOME/.pythonrc
